<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:gravity="center"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/login_button_selector"
            android:scaleType="fitCenter"
            android:id="@+id/button1"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="@string/phy"
            android:textSize="10sp" />

        <ImageButton
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/login_button_selectorchem"
            android:scaleType="fitCenter"
            android:id="@+id/button2"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="@string/chm"
            android:textSize="10sp" />


    </LinearLayout>
    <LinearLayout
android:id="@+id/linearlayout2"
android:layout_width="match_parent"
android:layout_height="120dp"
android:layout_margin="10dp"
android:gravity="center"
android:orientation="horizontal"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/linearlayout1">

<ImageButton
    android:background="#00FFFFFF"
    app:srcCompat="@drawable/login_button_selectorpeace"
    android:scaleType="fitCenter"
    android:id="@+id/button3"
    android:clickable="true"
    android:layout_width="0dp"
    android:layout_weight="0.5"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:text="@string/pea"
    android:textSize="10sp" />
<ImageButton
    android:layout_width="0dp"
    android:layout_weight="0.5"
    android:layout_height="100dp"
    android:background="#00FFFFFF"
    app:srcCompat="@drawable/login_button_selectorliter"
    android:scaleType="fitCenter"
    android:id="@+id/button4"
    android:clickable="true"
    android:layout_margin="10dp"
    android:text="@string/lit"
    android:textSize="10sp" />
</LinearLayout>

