    <TextView
        android:id="@+id/textView"
        android:layout_width="408dp"
        android:layout_height="124dp"
        android:background="#2FFFFFFF"
        android:fontFamily="@font/old_standard_tt_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="Institute Explorer"
        android:textColor="#000000"
        android:textColorHighlight="#00BCD4"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="215dp"
        android:layout_height="109dp"
        android:layout_marginTop="32dp"
        android:alpha="100"
        android:background="#80858585"
        android:fontFamily="@font/old_standard_tt_bold"
        android:onClick="chooseCountry"
        android:text="Search Country"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_exist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.196" />

    <Button
        android:id="@+id/button_exist"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_marginBottom="92dp"
        android:background="#80858585"
        android:fontFamily="@font/old_standard_tt_bold"
        android:onClick="existMain"
        android:shadowColor="#FF0000"
        android:text="Exit"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:backgroundTint="#99FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>